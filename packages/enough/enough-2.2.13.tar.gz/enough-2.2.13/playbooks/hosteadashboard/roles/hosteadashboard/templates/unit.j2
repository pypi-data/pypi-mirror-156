[Unit]
Description=Hostea dashboard
After=syslog.target
After=network.target
Wants=postgresql.service
After=postgresql.service

[Service]
RestartSec=10s
Type=simple
User=debian
Group=debian
WorkingDirectory=/srv/hosteadashboard/dashboard
ExecStart=/srv/hosteadashboard/venv/bin/python3 manage.py runserver
Restart=always
Environment=DATABSE_URL=postgres://{{ hosteadashboard_db_user }}:{{ hosteadashboard_db_password }}@localhost:5432/{{ hosteadashboard_db_name }} db=hostea-dashboard

[Install]
WantedBy=multi-user.target
