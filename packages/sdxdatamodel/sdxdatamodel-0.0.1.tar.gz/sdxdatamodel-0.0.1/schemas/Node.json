{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Node",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "short_name": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "location": {
            "$ref": "location.json"
        },
        "ports": {
            "type": "array",
            "items": [
                {
                    "$ref": "port.json"
                }
            ]
        }
    },
    "required": ["id", "location", "name", "ports"]
}