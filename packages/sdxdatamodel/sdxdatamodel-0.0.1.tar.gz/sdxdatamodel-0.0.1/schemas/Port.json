{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Port",
    "type": "object",
    "properties": {
        "id": {
            "description": "This is supposed to be an unique identifier",
            "type": "string"
        },
        "short_name": {
            "description": "A convinient short name",
            "type": "string"
        },
        "name": {
            "description": "This is supposed to be a full name",
            "type": "string"
        },
        "node": {
            "type": "string"
        },
        "nni": {
            "type": "boolean"
        },
        "type": {
            "type": "string",
            "enum": [
                "100FE",
                "1GE",
                "10GE",
                "25GE",
                "40GE",
                "100GE",
                "400GE",
                "Other"
            ]
        },
        "encapsulation": {
            "type": "string",
            "enum": [
                "Q-in-Q",
                "Mac-in-Mac",
                "VLAN"
            ]
        },
        "label": {
            "type": "string",
            "enum": [
                "vlan"
            ]
        },
        "swapping_capability": {
            "type": "string",
            "enum": [
                "vlan"
            ]
        },
        "label_range": {
            "type": "array",
            "items": {
                "type": "array",
                "minItems": 1,
                "maxItems": 4096,
                "uniqueItems": true,
                "items": {
                    "type": "string"
                }
            }
        },
        "mtu": {
            "type": "number",
            "minimum": 1000,
            "maximum": 10000
        },
        "status": {
            "type": "string",
            "enum": [
                "up",
                "down",
                "error"
            ]
        },
        "state": {
            "type": "string",
            "enum": [
                "enabled",
                "disabled",
                "maintenance"
            ]
        },
        "private_attributes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["id", "name", "node", "status"]
}
