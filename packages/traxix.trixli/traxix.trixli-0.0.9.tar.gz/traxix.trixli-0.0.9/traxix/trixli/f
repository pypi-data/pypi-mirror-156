#!/usr/bin/env python

import os
import re

from fire import Fire
from traxix.trixli.utils import _f


def functor(path):
    print(path)


def f(*args, p=".", e=None):
    """
    find all the path matching all the *args given
    Args:
    p: path from where to begin
    e: file extension

    Example:
    f foo bar
    is equivalent to find . |grep foo |grep bar

    f -p /tmp -e py hello world
    find /tmp -name "*.py" |grep hello |grep world
    """
    if e:
        args = list(args)
        args.append(f"\.{e}$")
    _f(*args, p=p, functor=functor)


if __name__ == "__main__":
    Fire(f)
